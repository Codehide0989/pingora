{
  "name": "@pingora/react",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/pingoraHQ/pingora.git"
  },
  "keywords": ["pingora", "react", "monitoring"],
  "homepage": "https://github.com/pingoraHQ/pingora#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": ["./dist/**"],
  "license": "MIT",
  "scripts": {
    "dev": "tsup --watch && pnpm run dev:tailwind",
    "dev:tailwind": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "build": "tsup && pnpm run build:tailwind"
  },
  "devDependencies": {
    "@pingora/tsconfig": "workspace:*",
    "@tailwindcss/cli": "4.1.8",
    "@types/node": "20.8.0",
    "@types/react": "18.3.3",
    "tailwindcss": "4.1.8",
    "tsup": "7.2.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
